#file uvvalue.sfx
#include include/basis.sfx

#GLSL
inout vec2 vUV: TEXCOORD_0;

in vec4 aPosition : POSITION_0;
in vec2 aUV : TEXCOORD_0;
void vertex(){
    gl_Position = MATRIX_MVP * aPosition;
    vUV = aUV;
}

out vec4 fragColor : TARGET_0;
void fragment(){
    fragColor = vec4(vUV,0,1.0);
}


#END

technique uv_value{

    #param vs vertex
    #param ps fragment

}