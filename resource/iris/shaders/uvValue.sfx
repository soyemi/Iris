#file uvvalue.sfx
#include "basis.sfx"

#GLSL
inout vec2 vUV;

in vec4 aPosition;
in vec2 aUV;
void vertex(){
    gl_Position = MATRIX_MVP * aPosition;
    vUV = aUV;
}

out vec4 fragColor;
void fragment(){
    fragColor = vec4(vUV,0,1.0);
}

#END

technique uv_value{
    vs: vertex;
    ps: fragment;
    property:{
        POSITION_0: aPosition;
        TEXCOORD_0: aUV;
    }
}