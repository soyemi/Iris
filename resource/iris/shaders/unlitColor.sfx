#file unlitColor.sfx
#include "basis.sfx"

#GLSL
precision mediump float;

in vec4 aPosition;
void vertex(){
    vec4 pos = aPosition;
    gl_Position = MATRIX_MVP * pos;
}

uniform vec4 uColor;

out vec4 fragColor;
void fragment(){
    fragColor = uColor;
}

#END

technique unlit_color{
    vs: vertex;
    ps: fragment;
    pipeline:{
        queue: opaque;
    }
    property:{
        POSITION_0: aPosition;
    }
}