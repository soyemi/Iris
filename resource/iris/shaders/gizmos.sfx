#file gizmos.sfx
#include "basis.sfx"

#GLSL
precision mediump float;

in vec4 aPosition;

void vertex(){
    vec4 vpos = aPosition;
    gl_Position = MATRIX_MVP * vpos;
}

out vec4 fragColor;
void fragment(){
    fragColor = vec4(1.0);
}
#END

technique gizmos{
    vs: vertex;
    ps: fragment;
    pipeline:{
        queue: other;
    }
    property:{
        POSITION_0: aPosition;
    }
}